@model IEnumerable<FourWheels.Web.Models.CarViewModels.CarAdBasicInfoViewModel>

<div>
    @Html.Action("LoadSearchBar", "CarAd", null)
</div>

<div class="row">
    @if (Model.Count() == 0)
    {
        <div class="text-center text-danger">
            <h3 id="noRecords">No records found!</h3>
        </div>
    }
    else
    {
        <div class="container-fluid">
            <fieldset class="scheduler-border">
                <legend class="scheduler-border">Car ads</legend>
                @foreach (var item in Model)
                {
                    @Html.Partial("_CarAdBasicInfoPartial", item)
                }
            </fieldset>
        </div>
    }
</div>

